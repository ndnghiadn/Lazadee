<form action="" method="POST">
    <label for="name">Name: </label>
<input id="name" type="text" name="name" required><br />
<label for="category">Category: </label>
<select id="category" name="category">
    {{#each this.list}}
        <option value="{{id}}">{{name}}</option>
    {{/each}}
</select><br />
<label for="price">Price: </label>
<input id="price" type="text" name="price" required><br />
    <label for="prePrice">prePrice: </label>
    <input id="prePrice" type="text" name="prePrice"><br />
<label for="imageUrl">Image Url: </label>
<input id="imageUrl" type="text" name="imageUrl" required><br />
<label for="isSale">Sale?</label>
<select id="isSale" name="isSale">
    <option value="1">true</option>
    <option value="0">false</option>
</select><br />
<button type="submit">Add</button>
</form>