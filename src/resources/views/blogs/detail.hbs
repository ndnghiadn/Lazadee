<!-- Blog Details Section Begin -->
    <section class="blog-details spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="blog-details-inner">
                        <div class="blog-detail-title">
                            <h2>{{blog.title}}</h2>
                            <p><span>by </span>{{ blog.username }} <span>- {{blog.time}}</span></p>
                        </div>
                        <div class="blog-large-pic">
                            <img src="{{blog.imageUrl}}" alt="">
                        </div>
                        <div class="blog-detail-desc">
                            <p>{{blog.content}}</p>
                        </div>
                        <div class="blog-quote">
                            <p>“ {{blog.quote}}”</p>
                        </div>
                        <div class="tag-share">
                            <div class="details-tag">
                                <ul>
                                    <li><i class="fa fa-tags"></i></li>
                                    <li>Travel</li>
                                    <li>Beauty</li>
                                    <li>Fashion</li>
                                </ul>
                            </div>
                            <div class="blog-share">
                                <span>Share:</span>
                                <div class="social-links">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-google-plus"></i></a>
                                    <a href="#"><i class="fa fa-instagram"></i></a>
                                    <a href="#"><i class="fa fa-youtube-play"></i></a>
                                </div>
                            </div>
                        </div>
                        {{#each this.cmtList}}
                        <div class="posted-by">
                            <div class="pb-pic">
                                <img src="/img/avatar-profile.jpg" alt="">
                            </div>
                            <div class="pb-text">
                                <a href="javascript:;">
                                    <h5>{{ username }}</h5>
                                </a>
                                <p>{{ content }}</p>
                            </div>
                        </div>
                        {{/each }}
                        {{#if this.isLogin}}
                            <div class="leave-comment">
                                <h4>Leave A Comment</h4>
                                <form action="#" method="POST" class="comment-form">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <textarea placeholder="Type something..." name="content" required></textarea>
                                            <button type="submit" class="site-btn">Post</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        {{else}}
                            <div class="leave-comment">
                                <h4>You need <a href="/login">Login</a> to post a comment.</h4>
                            </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Blog Details Section End -->